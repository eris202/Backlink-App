<script>

let passwordTglCont=document.querySelector(".pass-visibility");
  var condition = true
passwordTglCont.addEventListener("click",function () {
    let getPassword= document.querySelector(".password")
     
       if(condition){
           this.classList.remove("slash")
           getPassword.type="password"
       }
       else{
           getPassword.type="text"
           this.classList.add("slash")
       }
       condition=!condition
})

</script>
