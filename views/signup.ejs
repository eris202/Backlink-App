    <div class="col-lg-6 mx-auto bg-white py-3">
    <form class="col users" action="signup" method="POST">
            <h1 class="title text-center pb-3">
                    Get your account 
                </h1>
        <div class="form-group">
        <input class="input col fullname" type="text"  name="fullname" placeholder="Your Fullname">
       
    <% if(typeof(fullname)=="object"){ %>
           <span class="text-danger errmsg1">  <%= fullname.msg %> <% } %>
       
        </span>
        </div>

        <div class="form-group">
       
        <input class="input col" type="email" class="email-1" name="email" placeholder="Working Email">
        
        <% if(typeof(email)=="object"){ %>
        <span class="text-danger errmsg">    <%= email.msg %></span>
        <% } %>
        
        </div>

        <div class="form-group position-relative">
          <div class="pass-visibility"></div>
        <input class="input col password" type="password" name="password"placeholder="Password">
        <span class="text-danger errmsg"> <% if(typeof(password1)=="object"){ %>
            <%= password1.msg %>
        <% } %></span>
        </div>

        <div class="form-group">
        <input class="input col password-2" type="text" name="confirm-password" placeholder="Confirm Password">
        <span class="text-danger errmsg"> <% if(typeof(password2)=="object"){ %>
            <%= password2.msg %>
        <% } %></span>
        </div>
        <button type="submit" class="input primary-bg col text-white" id="signup">Signup</button>
    </form>
    </div>
</div>
